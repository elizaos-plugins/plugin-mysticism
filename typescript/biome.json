{
  "root": false,
  "$schema": "https://biomejs.dev/schemas/2.4.2/schema.json",
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "off",
        "noUnsafeOptionalChaining": "off"
      },
      "style": {
        "noNonNullAssertion": "off"
      },
      "suspicious": {
        "noExplicitAny": "warn"
      }
    }
  },
  "formatter": { "enabled": true, "indentWidth": 2, "indentStyle": "space", "lineWidth": 100 },
  "javascript": {
    "formatter": { "quoteStyle": "double", "trailingCommas": "es5", "semicolons": "always" }
  }
}
